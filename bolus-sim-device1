#!/bin/bash
#v1.091
#Stand-alone bolus calculator simulator for $DEVICE1
#
#https://www.boluscalculators.com
#info [at] boluscalculators dot com
#2021
#
echo '*************************************************************************************'
echo ''
echo 'BASH Bolus Calculator Simulator - interactive mode'
echo '...'
echo '*************************************************************************************'
echo ''

#if temp dir is still available, then remove temp dir
bash -c '[ -d temp_data_sim ] && rm -rf temp_data_sim'

#create new temp dir and cp and cd to dir
mkdir 'temp_data_sim'
cp iob_calc.sh bolus-sim-device1-test temp_data_sim
cd temp_data_sim

#to add a lot of zeroes to remove the decimal used at the user entries 
##currently the script accepts in the user entries an amount of decimals equal to the amount of zeroes in the echo
echo '1000000000' > 10000.txt
TENTHOUSAND=$(<10000.txt)

#if reversed correction is on ("1"), then it matches this file content
echo '1' > on.txt

#IOB calculator required?
echo 'Did you administer a bolus recently? (1=yes, 0=no)'
read yes_no
echo $yes_no > yes_no.txt
echo '1' > yes_yes.txt
echo '0' > no_no.txt
yes=$(<yes_yes.txt)
no=$(<no_no.txt)
echo '______________________________________________________________________'

#yes/no
if [[ $yes_no -eq $yes ]]
then
bash iob_calc.sh | tee
fi

if [[ $yes_no -eq $no ]]
then
echo '*************************************************************************************'
echo 'You have no meal IOB and no correction IOB'
echo '*************************************************************************************'
fi

#main settings and entries requested from the user
echo ''
echo 'Set rounding down of bolus calculations'
echo ''
echo 'type 1 to set rounding down bolus calculations to 0.000000001'
echo 'type 2 to set rounding down bolus calculations to 0.001'
echo 'type 3 to set rounding down bolus calculations to 0.01'
echo 'type 4 to set rounding down bolus calculations to 0.05'
echo 'type 5 to set rounding down bolus calculations to 0.10'
echo 'type 6 to set rounding down bolus calculations to 0.20'
read round_to_this_decimal_floor_entry
echo "$round_to_this_decimal_floor_entry" > round_to_this_decimal_floor_entry_1.txt
round_to_this_decimal_floor=$(<round_to_this_decimal_floor_entry_1.txt)


if [[ $round_to_this_decimal_floor -eq 1 ]]
then
echo 'rounding down all intermediate and final bolus calculations to nearest (multiple of) 0.001'
echo '0.001' > round_to_this_decimal_floor_selection_1.txt
round_to_this_decimal_floor_selection=$(<round_to_this_decimal_floor_selection_1.txt)
fi

if [[ $round_to_this_decimal_floor -eq 2 ]]
then
echo 'rounding down all intermediate and final bolus calculations to nearest (multiple of) 0.001'
echo '0.001' > round_to_this_decimal_floor_selection_1.txt
round_to_this_decimal_floor_selection=$(<round_to_this_decimal_floor_selection_2.txt)
fi

if [[ $round_to_this_decimal_floor -eq 3 ]]
then
echo 'rounding down all intermediate and final bolus calculations to nearest (multiple of) 0.01'
echo '0.01' > round_to_this_decimal_floor_selection_3.txt
round_to_this_decimal_floor_selection=$(<round_to_this_decimal_floor_selection_1.txt)
fi

if [[ $round_to_this_decimal_floor -eq 4 ]]
then
echo 'rounding down all intermediate and final bolus calculations to nearest (multiple of) 0.05'
echo '0.05' > round_to_this_decimal_floor_selection_4.txt
round_to_this_decimal_floor_selection=$(<round_to_this_decimal_floor_selection_1.txt)
fi

if [[ $round_to_this_decimal_floor -eq 5 ]]
then
echo 'rounding down all intermediate and final bolus calculations to nearest (multiple of) 0.10'
echo '0.10' > round_to_this_decimal_floor_selection_5.txt
round_to_this_decimal_floor_selection=$(<round_to_this_decimal_floor_selection_2.txt)
fi

if [[ $round_to_this_decimal_floor -eq 6 ]]
then
echo 'rounding down all intermediate and final bolus calculations to nearest (multiple of) 0.20'
echo '0.20' > round_to_this_decimal_floor_selection_6.txt
round_to_this_decimal_floor_selection=$(<round_to_this_decimal_floor_selection_2.txt)
fi

if [[ $round_to_this_decimal_floor -eq 1 ]]
then
echo 'rounding down all intermediate and final bolus calculations to nearest (multiple of) 0.001'
echo '0.001' > round_to_this_decimal_floor_selection_1.txt
round_to_this_decimal_floor_selection=$(<round_to_this_decimal_floor_selection_1.txt)
fi

echo '______________________________________________________________________'

echo 'Target BG:'
read targetBG
echo "$targetBG" > setting1_entry.txt
sed 's/,/./g' setting1_entry.txt > setting1_entry_1.txt
echo '______________________________________________________________________'

echo 'Minimum BG:'
read minimumBG
echo "$minimumBG" > setting2_entry.txt
sed 's/,/./g' setting2_entry.txt > setting2_entry_1.txt
echo '______________________________________________________________________'

echo 'Correct above (BG)'
read correct_above
echo "$correct_above" > correct_above_entry.txt
sed 's/,/./g' correct_above_entry.txt > correct_above_entry_1.txt
echo '______________________________________________________________________'

echo 'IC ratio (one unit of insulin consumes X(X(X)) grams of carbohydrates)'
read ICratio
echo "$ICratio" > setting3_entry.txt
sed 's/,/./g' setting3_entry.txt > setting3_entry_1.txt
echo '______________________________________________________________________'

echo 'Correction factor (decrease of BG per unit of insulin)'
read correctionfactor
echo "$correctionfactor" > setting4_entry.txt
sed 's/,/./g' setting4_entry.txt > setting4_entry_1.txt
echo '______________________________________________________________________'

echo 'Reverse correction on (1) or off (0)'
read reversedcorrection
echo "$reversedcorrection" > setting5_entry.txt
echo '______________________________________________________________________'

#if no BG available, current BG has to be set as target BG)
echo 'Current BG (if no current BG available, current BG has to be set as target BG):'
read addBG
echo "$addBG" > addBG_entry.txt
sed 's/,/./g' addBG_entry.txt > addBG_entry_1.txt
echo '______________________________________________________________________'

echo 'Carbohydrate consumption in gram:'
read carb_intake
echo "$carb_intake" > addCARB_entry.txt
sed 's/,/./g' addCARB_entry.txt > addCARB_entry_1.txt
echo '______________________________________________________________________'

echo 'Current meal IOB:'
read mealIOB
echo "$mealIOB" > addIOB_meal_entry.txt
sed 's/,/./g' addIOB_meal_entry.txt > addIOB_meal_entry_1.txt
echo '______________________________________________________________________'

echo 'Current correction IOB:'
read correctionIOB
echo "$correctionIOB" > addIOB_correction_entry.txt
sed 's/,/./g' addIOB_correction_entry.txt > addIOB_correction_entry_1.txt
echo '______________________________________________________________________'

#variables
minimumBG_1=$(<setting2_entry_1.txt)
targetBG_1=$(<setting1_entry_1.txt)
correct_above_1=$(<correct_above_entry_1.txt)
ICratio_1=$(<setting3_entry_1.txt)
correctionfactor_1=$(<setting4_entry_1.txt)
#reversedcorrection_1=$(<setting5_entry.txt)
addBG_1=$(<addBG_entry_1.txt)
carb_intake_1=$(<addCARB_entry_1.txt)
mealIOB_1=$(<addIOB_meal_entry_1.txt)
correctionIOB_1=$(<addIOB_correction_entry_1.txt)

#merging entries into file
echo 'Your settings' && date > yoursettings.txt
echo "Target BG: $targetBG_1" >> yoursettings.txt
echo "Minimum BG: $minimumBG_1" >> yoursettings.txt
echo "Correct above BG: $correct_above_1" >> yoursettings.txt
echo "IC ratio: $ICratio_1" >> yoursettings.txt
echo "Correction factor: $correctionfactor_1" >> yoursettings.txt
echo "Reversed correction: $reversedcorrection" >> yoursettings.txt
echo "Current BG: $addBG_1" >> yoursettings.txt
echo "Carbohydrate consumption: $carb_intake_1" >> yoursettings.txt
echo "Current meal IOB: $mealIOB_1" >> yoursettings.txt
echo "Current correction IOB: $correctionIOB_1" >> yoursettings.txt

#ehi
cat yoursettings.txt
echo '______________________________________________________________________'

read -p 'Confirm entries, then hit enter'

###inserting here
#lightweight bolus calculator

#the lines below print each of the user settings to a separate text file
echo '____________________________________________________________'
echo 'BASH Bolus Calculator Simulator'
echo 'v1.09'
echo '...'
echo ''
perl -lne 'print "$1" if /Target BG: (.*)/' yoursettings.txt > setting1.txt
perl -lne 'print "$1" if /Minimum BG: (.*)/' yoursettings.txt > setting2.txt
perl -lne 'print "$1" if /Correct above BG: (.*)/' yoursettings.txt > correct_above_bg.txt
perl -lne 'print "$1" if /IC ratio: (.*)/' yoursettings.txt > setting3.txt
perl -lne 'print "$1" if /Correction factor: (.*)/' yoursettings.txt > setting4.txt
perl -lne 'print "$1" if /Reversed correction: (.*)/' yoursettings.txt > setting5.txt
perl -lne 'print "$1" if /Current BG: (.*)/' yoursettings.txt > addBG.txt
perl -lne 'print "$1" if /Carbohydrate consumption: (.*)/' yoursettings.txt > addCARB.txt
perl -lne 'print "$1" if /Current meal IOB: (.*)/' yoursettings.txt > addIOB_meal_not_rounded.txt
perl -lne 'print "$1" if /Current correction IOB: (.*)/' yoursettings.txt > addIOB_correction_not_rounded.txt
echo 'your settings are loaded'
echo ''
echo '****************************************************************************'

#new variables
ON=$(<on.txt)
TARGETBG=$(<setting1.txt)
MINBG=$(<setting2.txt)
CORRECT_ABOVE_BG=$(<correct_above_bg.txt)
ICRATIO=$(<setting3.txt)
CORRECTIONFACTOR=$(<setting4.txt)
REVERSEDCORRECTION=$(<setting5.txt)
CURRENTBG=$(<addBG.txt)
CURRENTCARB=$(<addCARB.txt)
CURRENTIOB_MEAL_NOT_ROUNDED=$(<addIOB_meal_not_rounded.txt)
CURRENTIOB_CORRECTION_NOT_ROUNDED=$(<addIOB_correction_not_rounded.txt)

##rounding meal IOB up to nearest (multiple of) 0.05
#the number that has to be rounded up here
FULL_NUMBER_8=$(<addIOB_meal_not_rounded.txt)
#the decimals to which the module has to round up to (ceiling)
echo "0.05" > round_to_this_8.txt
ROUND_TO_THIS_8=$(<round_to_this_8.txt)
#rounding down to integer
echo $FULL_NUMBER_8 | awk '{print int($0)}' > integer_8.txt
INTEGER_8=$(<integer_8.txt)
#leftover decimals
calc -d "$FULL_NUMBER_8 - $INTEGER_8" > leftover_decimals_8.txt
DECIMALS_8=$(<leftover_decimals_8.txt)
#steps to take into integer
calc -d "$DECIMALS_8 / $ROUND_TO_THIS_8" > steps_into_integer_8.txt
STEPS_INTO_INTEGER_8=$(<steps_into_integer_8.txt)
echo $STEPS_INTO_INTEGER_8 | awk '{print int($0)}' > steps_into_integer_total_8.txt
STEPS_INTO_INTEGER_TOTAL_8=$(<steps_into_integer_total_8.txt)
calc -d "$STEPS_INTO_INTEGER_8 - $STEPS_INTO_INTEGER_TOTAL_8" > steps_leftover_decimals_8.txt
STEPS_LEFTOVER_DECIMALS_8=$(<steps_leftover_decimals_8.txt)
awk '$1>0 {$1=1} 1' steps_leftover_decimals_8.txt > steps_leftover_decimals_1_8.txt
STEPS_LEFTOVER_DECIMALS_1_8=$(<steps_leftover_decimals_1_8.txt)

if [[ $STEPS_LEFTOVER_DECIMALS_1_8 -eq 1 ]]
then
calc -d "$STEPS_INTO_INTEGER_TOTAL_8 + 1" > steps_into_integer_done_8.txt
else
head -1 steps_into_integer_total_8.txt > steps_into_integer_done_8.txt
fi

STEPS_INTO_INTEGER_TOTAL_DONE_8=$(<steps_into_integer_done_8.txt)
#rounding of some sort
calc -d "$STEPS_INTO_INTEGER_TOTAL_DONE_8 * $ROUND_TO_THIS_8" > new_decimals_8.txt
NEW_DECIMALS_8=$(<new_decimals_8.txt)
#new rounded number
calc -d "$INTEGER_8 + $NEW_DECIMALS_8" > addIOB_meal.txt
#cat rounded_number.txt
CURRENTIOB_MEAL=$(<addIOB_meal.txt)


##rounding correction IOB up to the nearest (multiple of) 0.05
#the number that has to be rounded up here
FULL_NUMBER_9=$(<addIOB_correction_not_rounded.txt)
#the decimals to which the module has to round up to (ceiling)
echo "0.05" > round_to_this_9.txt
ROUND_TO_THIS_9=$(<round_to_this_9.txt)
#rounding down to integer
echo $FULL_NUMBER_9 | awk '{print int($0)}' > integer_9.txt
INTEGER_9=$(<integer_9.txt)
#leftover decimals
calc -d "$FULL_NUMBER_9 - $INTEGER_9" > leftover_decimals_9.txt
DECIMALS_9=$(<leftover_decimals_9.txt)
#steps to take into integer
calc -d "$DECIMALS_9 / $ROUND_TO_THIS_9" > steps_into_integer_9.txt
STEPS_INTO_INTEGER_9=$(<steps_into_integer_9.txt)
echo $STEPS_INTO_INTEGER_9 | awk '{print int($0)}' > steps_into_integer_total_9.txt
STEPS_INTO_INTEGER_TOTAL_9=$(<steps_into_integer_total_9.txt)
calc -d "$STEPS_INTO_INTEGER_9 - $STEPS_INTO_INTEGER_TOTAL_9" > steps_leftover_decimals_9.txt
STEPS_LEFTOVER_DECIMALS_9=$(<steps_leftover_decimals_9.txt)
awk '$1>0 {$1=1} 1' steps_leftover_decimals_9.txt > steps_leftover_decimals_1_9.txt
STEPS_LEFTOVER_DECIMALS_1_9=$(<steps_leftover_decimals_1_9.txt)

if [[ $STEPS_LEFTOVER_DECIMALS_1_9 -eq 1 ]]
then
calc -d "$STEPS_INTO_INTEGER_TOTAL_9 + 1" > steps_into_integer_done_9.txt
else
head -1 steps_into_integer_total_9.txt > steps_into_integer_done_9.txt
fi

STEPS_INTO_INTEGER_TOTAL_DONE_9=$(<steps_into_integer_done_9.txt)
#rounding of some sort
calc -d "$STEPS_INTO_INTEGER_TOTAL_DONE_9 * $ROUND_TO_THIS_9" > new_decimals_9.txt
NEW_DECIMALS_9=$(<new_decimals_9.txt)
#new rounded number
calc -d "$INTEGER_9 + $NEW_DECIMALS_9" > addIOB_correction.txt
#cat rounded_number.txt
CURRENTIOB_CORRECTION=$(<addIOB_correction.txt)


#total IOB
calc -d "$CURRENTIOB_MEAL + $CURRENTIOB_CORRECTION" > totalIOB_space.txt
sed -e 's/^[\t]*//' totalIOB_space.txt > totalIOB.txt
TOTALIOB=$(<totalIOB.txt)


#MEAL BOLUS CALCULATION
calc -d "$CURRENTCARB / $ICRATIO" > mealbolus_space.txt
sed -e 's/^[\t]*//' mealbolus_space.txt > mealbolus_not_rounded.txt
MEALBOLUS_NOT_ROUNDED=$(<mealbolus_not_rounded.txt)

#rounded down to nearest (multiple of) specified decimal(s)
#the number that has to be rounded down here
FULL_NUMBER_1=$(<mealbolus_not_rounded.txt)
#the decimals to which the module has to round down to (floor)
echo "$round_to_this_decimal_floor_selection" > round_to_this_1.txt
ROUND_TO_THIS_1=$(<round_to_this_1.txt)
#rounding down to integer
echo $FULL_NUMBER_1 | awk '{print int($0)}' > integer_1.txt
INTEGER_1=$(<integer_1.txt)
#leftover decimals
calc -d "$FULL_NUMBER_1 - $INTEGER_1" > leftover_decimals_1.txt
DECIMALS_1=$(<leftover_decimals_1.txt)
#steps to take into integer
calc -d "$DECIMALS_1 / $ROUND_TO_THIS_1" > steps_into_integer_1.txt
STEPS_INTO_INTEGER_1=$(<steps_into_integer_1.txt)
echo $STEPS_INTO_INTEGER_1 | awk '{print int($0)}' > steps_into_integer_total_1.txt
STEPS_INTO_INTEGER_TOTAL_1=$(<steps_into_integer_total_1.txt)
#rounding of some sort
calc -d "$STEPS_INTO_INTEGER_TOTAL_1 * $ROUND_TO_THIS_1" > new_decimals_1.txt
NEW_DECIMALS_1=$(<new_decimals_1.txt)
#new rounded number
calc -d "$INTEGER_1 + $NEW_DECIMALS_1" > mealbolus_space.txt
sed -e 's/^[\t]*//' mealbolus_space.txt > mealbolus.txt
MEALBOLUS=$(<mealbolus.txt)


#REVERSED CORRECTION MEAL BOLUS step 1; output is the difference between current BG and target BG'
calc -d "$CURRENTBG - $TARGETBG" > tempfile1_space.txt
sed -e 's/^[\t]*//' tempfile1_space.txt > tempfile1_negative.txt
tr -d \- < tempfile1_negative.txt > tempfile1.txt
REVERSEDKLOOF=$(<tempfile1.txt)
#REVERSED CORRECTION MEAL BOLUS step 2; output is the BG to reverse correct for (output from step 1), divided by the correction factor, which results in the amount of insulin to be deducted from the meal bolus
calc -d "$REVERSEDKLOOF / $CORRECTIONFACTOR" > tempfile2.txt
#tr -d \~ < tempfile2_1.txt > tempfile2.txt
REVERSEDKLOOF10000=$(<tempfile2.txt)
#REVERSED CORRECTION MEAL BOLUS step 3; meal bolus minus the output of step 2
calc -d "$MEALBOLUS - $REVERSEDKLOOF10000" > mealbolus_reversed.txt
awk '$1<0 {$1=0} 1' mealbolus_reversed.txt > tempfile3_space.txt
sed -e 's/^[\t]*//' tempfile3_space.txt > tempfile3_not_rounded.txt
CORRECTIONBOLUSREVERSED_NOT_ROUNDED=$(<tempfile3_not_rounded.txt)

#rounded down to nearest (multiple of) specified decimal(s)
#the number that has to be rounded down here
FULL_NUMBER_2=$(<tempfile3_not_rounded.txt)
#the decimals to which the module has to round down to (floor)
echo "$round_to_this_decimal_floor_selection" > round_to_this_2.txt
ROUND_TO_THIS_2=$(<round_to_this_2.txt)
#rounding down to integer
echo $FULL_NUMBER_2 | awk '{print int($0)}' > integer_2.txt
INTEGER_2=$(<integer_2.txt)
#leftover decimals
calc -d "$FULL_NUMBER_2 - $INTEGER_2" > leftover_decimals_2.txt
DECIMALS_2=$(<leftover_decimals_2.txt)
#steps to take into integer
calc -d "$DECIMALS_2 / $ROUND_TO_THIS_2" > steps_into_integer_2.txt
STEPS_INTO_INTEGER_2=$(<steps_into_integer_2.txt)
echo $STEPS_INTO_INTEGER_2 | awk '{print int($0)}' > steps_into_integer_total_2.txt
STEPS_INTO_INTEGER_TOTAL_2=$(<steps_into_integer_total_2.txt)
#rounding of some sort
calc -d "$STEPS_INTO_INTEGER_TOTAL_2 * $ROUND_TO_THIS_2" > new_decimals_2.txt
NEW_DECIMALS_2=$(<new_decimals_2.txt)
#new rounded number
calc -d "$INTEGER_2 + $NEW_DECIMALS_2" > tempfile3_space.txt
sed -e 's/^[\t]*//' tempfile3_space.txt > tempfile3.txt
CORRECTIONBOLUSREVERSED=$(<tempfile3.txt)






#REVERSED CORRECTION MEAL BOLUS adjusted for correction IOB; 
calc -d "$MEALBOLUS - $CURRENTIOB_CORRECTION" > mealbolus_minusIOBcorrection_space.txt
sed -e 's/^[\t]*//' mealbolus_minusIOBcorrection_space.txt > mealbolus_minusIOBcorrection_posneg.txt
awk '$1<0 {$1=0} 1' mealbolus_minusIOBcorrection_posneg.txt > mealbolus_minusIOBcorrection_pos.txt
MEALBOLUS_minus_IOBCORRECTION=$(<mealbolus_minusIOBcorrection_pos.txt)

calc -d "$MEALBOLUS_minus_IOBCORRECTION - $REVERSEDKLOOF10000" > reversedcorrectionmealbolus_IOB_space.txt
sed -e 's/^[\t]*//' reversedcorrectionmealbolus_IOB_space.txt > reversedcorrectionmealbolus_IOB_posneg.txt
awk '$1<0 {$1=0} 1' reversedcorrectionmealbolus_IOB_posneg.txt > reversedcorrectionmealbolus_IOB_pos_not_rounded.txt
CORRECTIONBOLUSREVERSED_IOB_NOTROUNDED=$(<reversedcorrectionmealbolus_IOB_pos_not_rounded.txt)

FULL_NUMBER_7=$(<reversedcorrectionmealbolus_IOB_pos_not_rounded.txt)
#the decimals to which the module has to round down to (floor)
echo "$round_to_this_decimal_floor_selection" > round_to_this_7.txt
ROUND_TO_THIS_7=$(<round_to_this_7.txt)
#rounding down to integer
echo $FULL_NUMBER_7 | awk '{print int($0)}' > integer_7.txt
INTEGER_7=$(<integer_7.txt)
#leftover decimals
calc -d "$FULL_NUMBER_7 - $INTEGER_7" > leftover_decimals_7.txt
DECIMALS_7=$(<leftover_decimals_7.txt)
#steps to take into integer
calc -d "$DECIMALS_7 / $ROUND_TO_THIS_7" > steps_into_integer_7.txt
STEPS_INTO_INTEGER_7=$(<steps_into_integer_7.txt)
echo $STEPS_INTO_INTEGER_7 | awk '{print int($0)}' > steps_into_integer_total_7.txt
STEPS_INTO_INTEGER_TOTAL_7=$(<steps_into_integer_total_7.txt)
#rounding of some sort
calc -d "$STEPS_INTO_INTEGER_TOTAL_7 * $ROUND_TO_THIS_7" > new_decimals_7.txt
NEW_DECIMALS_7=$(<new_decimals_7.txt)
#new rounded number
calc -d "$INTEGER_7 + $NEW_DECIMALS_7" > reversedcorrectionmealbolus_IOB_pos_space.txt
sed -e 's/^[\t]*//' reversedcorrectionmealbolus_IOB_pos_space.txt > reversedcorrectionmealbolus_IOB_pos.txt
CORRECTIONBOLUSREVERSED_IOB=$(<reversedcorrectionmealbolus_IOB_pos.txt)










#CORRECTION BOLUS step 1; output is the difference between current BG and target BG
calc -d "$CURRENTBG - $TARGETBG" > bgkloof.txt
BGKLOOF=$(<bgkloof.txt)
#CORRECTION BOLUS step 2; the difference in BG divided by the correction factor, which results in the correction bolus
calc -d "$BGKLOOF / $CORRECTIONFACTOR" > correctionbolus_space.txt
sed -e 's/^[\t]*//' correctionbolus_space.txt > correctionbolus_posneg.txt
awk '$1<0 {$1=0} 1' correctionbolus_posneg.txt > correctionbolus_test_not_rounded.txt
CORRECTIONBOLUS_NOT_ROUNDED=$(<correctionbolus_test_not_rounded.txt)

#rounded down to nearest (multiple of) specified decimal(s)
#the number that has to be rounded down here
FULL_NUMBER_3=$(<correctionbolus_test_not_rounded.txt)
#the decimals to which the module has to round down to (floor)
echo "$round_to_this_decimal_floor_selection" > round_to_this_3.txt
ROUND_TO_THIS_3=$(<round_to_this_3.txt)
#rounding down to integer
echo $FULL_NUMBER_3 | awk '{print int($0)}' > integer_3.txt
INTEGER_3=$(<integer_3.txt)
#leftover decimals
calc -d "$FULL_NUMBER_3 - $INTEGER_3" > leftover_decimals_3.txt
DECIMALS_3=$(<leftover_decimals_3.txt)
#steps to take into integer
calc -d "$DECIMALS_3 / $ROUND_TO_THIS_3" > steps_into_integer_3.txt
STEPS_INTO_INTEGER_3=$(<steps_into_integer_3.txt)
echo $STEPS_INTO_INTEGER_3 | awk '{print int($0)}' > steps_into_integer_total_3.txt
STEPS_INTO_INTEGER_TOTAL_3=$(<steps_into_integer_total_3.txt)
#rounding of some sort
calc -d "$STEPS_INTO_INTEGER_TOTAL_3 * $ROUND_TO_THIS_3" > new_decimals_3.txt
NEW_DECIMALS_3=$(<new_decimals_3.txt)
#new rounded number
calc -d "$INTEGER_3 + $NEW_DECIMALS_3" > correctionbolus_test_space.txt
sed -e 's/^[\t]*//' correctionbolus_test_space.txt > correctionbolus_test.txt
CORRECTIONBOLUS=$(<correctionbolus_test.txt)


#CORRECTION BOLUS RECALCULATED FOR IOB ENTRIES; correction bolus minus meal IOB
calc -d "$CORRECTIONBOLUS - $CURRENTIOB_MEAL" > correctionbolusminusIOBmeal.txt
awk '$1<0 {$1=0} 1' correctionbolusminusIOBmeal.txt > tempfile.txt
correctionbolusminusIOBmeal=$(<tempfile.txt)
#calculation of IOB leftover from meal IOB
calc -d "$CURRENTIOB_CORRECTION - $correctionbolusminusIOBmeal" > IOB_leftover_posneg.txt
awk '$1<0 {$1=0} 1' IOB_leftover_posneg.txt > IOB_leftover_pos_space.txt
sed -e 's/^[\t]*//' IOB_leftover_pos_space.txt> IOB_leftover.txt
IOB_leftover=$(<IOB_leftover.txt)
#correctionbolusminusIOBmeal minus correction IOB
calc -d "$correctionbolusminusIOBmeal - $CURRENTIOB_CORRECTION" > correctionbolusminusIOB_posneg.txt
awk '$1<0 {$1=0} 1' correctionbolusminusIOB_posneg.txt > correctionbolusminusIOB_neg.txt
tr -d \- < correctionbolusminusIOB_neg.txt > correctionbolusminusIOB_not_rounded.txt
correctionbolusminusIOB_NOT_ROUNDED=$(<correctionbolusminusIOB_not_rounded.txt)

#rounded down to nearest (multiple of) specified decimal(s)
#the number that has to be rounded down here
FULL_NUMBER_4=$(<correctionbolusminusIOB_not_rounded.txt)
#the decimals to which the module has to round down to (floor)
echo "$round_to_this_decimal_floor_selection" > round_to_this_4.txt
ROUND_TO_THIS_4=$(<round_to_this_4.txt)
#rounding down to integer
echo $FULL_NUMBER_4 | awk '{print int($0)}' > integer_4.txt
INTEGER_4=$(<integer_4.txt)
#leftover decimals
calc -d "$FULL_NUMBER_4 - $INTEGER_4" > leftover_decimals_4.txt
DECIMALS_4=$(<leftover_decimals_4.txt)
#steps to take into integer
calc -d "$DECIMALS_4 / $ROUND_TO_THIS_4" > steps_into_integer_4.txt
STEPS_INTO_INTEGER_4=$(<steps_into_integer_4.txt)
echo $STEPS_INTO_INTEGER_4 | awk '{print int($0)}' > steps_into_integer_total_4.txt
STEPS_INTO_INTEGER_TOTAL_4=$(<steps_into_integer_total_4.txt)
#rounding of some sort
calc -d "$STEPS_INTO_INTEGER_TOTAL_4 * $ROUND_TO_THIS_4" > new_decimals_4.txt
NEW_DECIMALS_4=$(<new_decimals_4.txt)
#new rounded number
calc -d "$INTEGER_4 + $NEW_DECIMALS_4" > correctionbolusminusIOB_space.txt
sed -e 's/^[\t]*//' correctionbolusminusIOB_space.txt > correctionbolusminusIOB.txt
correctionbolusminusIOB=$(<correctionbolusminusIOB.txt)


#MEAL BOLUS AND CORRECTION BOLUS (NO IOB)'
calc -d "$MEALBOLUS + $CORRECTIONBOLUS" > totalboluswithoutIOB_space.txt
sed -e 's/^[\t]*//' totalboluswithoutIOB_space.txt > totalboluswithoutIOB_not_rounded.txt
#tr -d \~ < totalboluswithoutIOB.txt > totalboluswithoutIOB_positive.txt
totalboluswithoutIOB_NOT_ROUNDED=$(<totalboluswithoutIOB_not_rounded.txt)

#rounded down to nearest (multiple of) specified decimal(s)
#the number that has to be rounded down here
FULL_NUMBER_5=$(<totalboluswithoutIOB_not_rounded.txt)
#the decimals to which the module has to round down to (floor)
echo "$round_to_this_decimal_floor_selection" > round_to_this_5.txt
ROUND_TO_THIS_5=$(<round_to_this_5.txt)
#rounding down to integer
echo $FULL_NUMBER_5 | awk '{print int($0)}' > integer_5.txt
INTEGER_5=$(<integer_5.txt)
#leftover decimals
calc -d "$FULL_NUMBER_5 - $INTEGER_5" > leftover_decimals_5.txt
DECIMALS_5=$(<leftover_decimals_5.txt)
#steps to take into integer
calc -d "$DECIMALS_5 / $ROUND_TO_THIS_5" > steps_into_integer_5.txt
STEPS_INTO_INTEGER_5=$(<steps_into_integer_5.txt)
echo $STEPS_INTO_INTEGER_5 | awk '{print int($0)}' > steps_into_integer_total_5.txt
STEPS_INTO_INTEGER_TOTAL_5=$(<steps_into_integer_total_5.txt)
#rounding of some sort
calc -d "$STEPS_INTO_INTEGER_TOTAL_5 * $ROUND_TO_THIS_5" > new_decimals_5.txt
NEW_DECIMALS_5=$(<new_decimals_5.txt)
#new rounded number
calc -d "$INTEGER_5 + $NEW_DECIMALS_5" > totalboluswithoutIOB_space.txt
sed -e 's/^[\t]*//' totalboluswithoutIOB_space.txt > totalboluswithoutIOB.txt
totalboluswithoutIOB=$(<totalboluswithoutIOB.txt)


#MEAL BOLUS adjusted for IOB leftover (if correction + meal bolus + IOB)
calc -d "$MEALBOLUS - $IOB_leftover" > mealbolusminusIOB_1.txt
awk '$1<0 {$1=0} 1' mealbolusminusIOB_1.txt > mealbolusminusIOB.txt
sed -e 's/^[\t]*//' mealbolusminusIOB.txt > mealbolus_final_not_rounded.txt
mealbolus_final_NOT_ROUNDED=$(<mealbolus_final_not_rounded.txt)

#rounded down to nearest (multiple of) specified decimal(s)
#the number that has to be rounded down here
FULL_NUMBER_6=$(<mealbolus_final_not_rounded.txt)
#the decimals to which the module has to round down to (floor)
echo "$round_to_this_decimal_floor_selection" > round_to_this_6.txt
ROUND_TO_THIS_6=$(<round_to_this_6.txt)
#rounding down to integer
echo $FULL_NUMBER_6 | awk '{print int($0)}' > integer_6.txt
INTEGER_6=$(<integer_6.txt)
#leftover decimals
calc -d "$FULL_NUMBER_6 - $INTEGER_6" > leftover_decimals_6.txt
DECIMALS_6=$(<leftover_decimals_6.txt)
#steps to take into integer
calc -d "$DECIMALS_6 / $ROUND_TO_THIS_6" > steps_into_integer_6.txt
STEPS_INTO_INTEGER_6=$(<steps_into_integer_6.txt)
echo $STEPS_INTO_INTEGER_6 | awk '{print int($0)}' > steps_into_integer_total_6.txt
STEPS_INTO_INTEGER_TOTAL_6=$(<steps_into_integer_total_6.txt)
#rounding of some sort
calc -d "$STEPS_INTO_INTEGER_TOTAL_6 * $ROUND_TO_THIS_6" > new_decimals_6.txt
NEW_DECIMALS_6=$(<new_decimals_6.txt)
#new rounded number
calc -d "$INTEGER_6 + $NEW_DECIMALS_6" > mealbolus_final_space.txt
sed -e 's/^[\t]*//' mealbolus_final_space.txt > mealbolus_final.txt
mealbolus_final=$(<mealbolus_final.txt)


##in use for if_then
#multiplication factor
calc -d "$TARGETBG * $TENTHOUSAND" > targetbg10000_space.txt
sed -e 's/^[\t]*//' targetbg10000_space.txt > targetbg10000.txt
calc -d "$MINBG * $TENTHOUSAND" > minbg10000_space.txt
sed -e 's/^[\t]*//' minbg10000_space.txt > minbg10000.txt
calc -d "$CORRECT_ABOVE_BG * $TENTHOUSAND" > correct_above_bg_10000_space.txt
sed -e 's/^[\t]*//' correct_above_bg_10000_space.txt > correct_above_bg_10000.txt
calc -d "$ICRATIO * $TENTHOUSAND" > icratio10000_space.txt
sed -e 's/^[\t]*//' icratio10000_space.txt > icratio10000.txt
calc -d "$CURRENTCARB * $TENTHOUSAND" > currentcarb10000_space.txt
sed -e 's/^[\t]*//' currentcarb10000_space.txt > currentcarb10000.txt
calc -d "$CURRENTBG * $TENTHOUSAND" > currentbg10000_space.txt
sed -e 's/^[\t]*//' currentbg10000_space.txt > currentbg10000.txt
calc -d "$CURRENTIOB_MEAL* $TENTHOUSAND" > currentiob_meal_manual_entry_10000_space.txt
sed -e 's/^[\t]*//' currentiob_meal_manual_entry_10000_space.txt > currentiob_meal_manual_entry_10000.txt
calc -d "$CURRENTIOB_CORRECTION * $TENTHOUSAND" > currentiob_correction_manual_entry_10000_space.txt
sed -e 's/^[\t]*//' currentiob_correction_manual_entry_10000_space.txt > currentiob_correction_manual_entry_10000.txt
calc -d "$TOTALIOB * $TENTHOUSAND" > totaliob_manual_entry_10000_space.txt
sed -e 's/^[\t]*//' totaliob_manual_entry_10000_space.txt > totaliob_manual_entry_10000.txt
calc -d "$correctionbolusminusIOB * $TENTHOUSAND" > correctionbolusminusIOB_manual_entry_10000_space.txt
sed -e 's/^[\t]*//' correctionbolusminusIOB_manual_entry_10000_space.txt > correctionbolusminusIOB_manual_entry_10000.txt

#new variables
TARGETBG10000=$(<targetbg10000.txt)
MINBG10000=$(<minbg10000.txt)
CORRECT_ABOVE_BG10000=$(<correct_above_bg_10000.txt)
ICRATIO10000=$(<icratio10000.txt)
CURRENTBG10000=$(<currentbg10000.txt)
CURRENTCARB10000=$(<currentcarb10000.txt)
CURRENTIOB_MEAL10000=$(<currentiob_meal_manual_entry_10000.txt)
CURRENTIOB_CORRECTION10000=$(<currentiob_correction_manual_entry_10000.txt)
TOTALIOB10000=$(<totaliob_manual_entry_10000.txt)
correctionbolusminusIOB10000=$(<correctionbolusminusIOB_manual_entry_10000.txt)


##bolus rule sets (1=true 0=false)
#for meal bolus etc.

if [[ $CURRENTBG10000 -ge $MINBG10000 ]]
then
echo '1' > currentbg_ge_minbg.txt
else
echo '0' > currentbg_ge_minbg.txt
fi

if [[ $CURRENTBG10000 -eq $TARGETBG10000 ]]
then
echo '1' > currentbg_eq_targetbg.txt
else
echo '0' > currentbg_eq_targetbg.txt
fi

if [[ $CURRENTCARB10000 -gt 0 ]]
then
echo '1' > currentcarb_gt_zero.txt
else
echo '0' > currentcarb_gt_zero.txt
fi

#for reversed correction

if [[ $CURRENTBG10000 -lt $TARGETBG10000 ]]
then
echo '1' > currentbg_lt_targetbg.txt
else
echo '0' > currentbg_lt_targetbg.txt
fi

if [[ $REVERSEDCORRECTION -eq 1 ]]
then
echo '1' > reversedcorrection_eq_one.txt
else
echo '0' > reversedcorrection_eq_one.txt
fi

#for correction bolus etc.

if [[ $CURRENTBG10000 -gt $TARGETBG10000 ]]
then
echo '1' > currentbg_gt_targetbg.txt
else
echo '0' > currentbg_gt_targetbg.txt
fi

if [[ $CURRENTCARB10000 -eq 0 ]]
then
echo '1' > currentcarb_eq_zero.txt
else
echo '0' > currentcarb_eq_zero.txt
fi

if [[ $CURRENTBG10000 -gt $CORRECT_ABOVE_BG10000 ]]
then
echo '1' > currentbg_gt_correctabovebg.txt
else
echo '0' > currentbg_gt_correctabovebg.txt
fi


#for IOB if_then
calc -d "$CURRENTIOB_MEAL10000 + $CURRENTIOB_CORRECTION10000" > totalIOB10000_space.txt
sed -e 's/^[\t]*//' totalIOB10000_space.txt > totalIOB10000.txt
TOTALIOB10000=$(<totalIOB10000.txt)

awk '$1>0 {$1=1} 1' totalIOB10000.txt > total_iob_is_positive_for_if_then.txt
TOTALIOB_GT_ZERO=$(<total_iob_is_positive_for_if_then.txt)

awk '$1>0 {$1=1} 1' addIOB_meal.txt > currentiobmeal_is_positive_for_if_then.txt
CURRENTIOBMEAL_GT_ZERO=$(<currentiobmeal_is_positive_for_if_then.txt)

awk '$1>0 {$1=1} 1' addIOB_correction.txt > currentiobcorrection_is_positive_for_if_then.txt
CURRENTIOBCORRECTION_GT_ZERO=$(<currentiobcorrection_is_positive_for_if_then.txt)


#for correction bolus minus IOB if_then

awk '$1>0 {$1=1} 1' correctionbolusminusIOB.txt > correctionbolusminusiob_is_positive_for_if_then.txt
CORRECTIONBOLUSMINUSIOB_GT_ZERO=$(<correctionbolusminusiob_is_positive_for_if_then.txt)


#your meal IOB is:
if [[ $CURRENTIOBMEAL_GT_ZERO -eq 1 ]]
then
echo 'you still have ' > meal_IOB_alert_add.txt
