echo '' >> meal_IOB_alert.txt
cat meal_IOB_alert.txt
fi

#your correction IOB is:
if [[ $CURRENTIOBCORRECTION_GT_ZERO -eq 1 ]]
then
echo 'you still have ' > correction_IOB_alert_add.txt
